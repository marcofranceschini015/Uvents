<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.WelcomeFragment"
    android:background="#336699">

    <RelativeLayout
        android:id="@+id/relativeLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Where do you want to search events?"
        android:textColor="#DAF7DC"
        android:textSize="24sp"
        app:lineHeight="16dp"
        android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/txtQuestion">
        <Button
            android:id="@+id/insertCityBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@drawable/button_city_bg"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>
        <Button
            android:id="@+id/useLocationBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/button_location_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type city"
            android:textColor="#DAF7DC"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Localization"
            android:textColor="#DAF7DC"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato"
            android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSignButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayoutText"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"
                android:text="Sign-In"
                android:textAllCaps="false"
                android:fontFamily="@font/lato"
                android:textSize="24sp"
                android:textColor="#DAF7DC"
                android:background="@drawable/button_sign_bg"
                android:layout_marginTop="70dp" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"
                android:text="Sign-Up"
                android:textAllCaps="false"
                android:fontFamily="@font/lato"
                android:textSize="24sp"
                android:textColor="#DAF7DC"
                android:background="@drawable/button_sign_bg"
                android:layout_marginTop="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutInsertCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/linearLayoutText"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/etInputCity"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="48dp"
                android:hint="Insert a city"
                android:textColorHint="#DAF7DC"
                android:paddingStart="20dp"
                android:fontFamily="@font/lato"
                android:textSize="24sp"
                android:textColor="#DAF7DC"
                android:background="@drawable/insert_city_et_bg"
                android:layout_marginTop="10dp"/>


            <Button
                android:id="@+id/btnInputCity"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"
                android:text="Insert"
                android:textAllCaps="false"
                android:fontFamily="@font/lato"
                android:textSize="24sp"
                android:textColor="#DAF7DC"
                android:background="@drawable/button_sign_bg"
                android:layout_marginTop="70dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>