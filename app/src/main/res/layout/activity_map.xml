<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.MapActivity">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="675dp"
            android:background="#8BC34A"
            app:mapbox_cameraTargetLat="0"
            app:mapbox_cameraTargetLng="0"
            app:mapbox_cameraZoom="14.0">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                        <SearchView
                            android:id="@+id/searchView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:iconifiedByDefault="false"
                            android:queryHint="Search a city"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_filtered_search_bg"
                            android:layout_marginEnd="10dp"
                            />

                </LinearLayout>

        </com.mapbox.maps.MapView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnBottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/black"
            app:itemTextColor="@color/white"
            app:menu="@menu/bottom_menu"
            android:layout_below="@+id/mapView"/>

</RelativeLayout>