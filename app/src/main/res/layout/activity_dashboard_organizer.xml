<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.WelcomeActivity"
    android:background="#336699">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/organizer_default_logo"
        android:scaleType="fitXY"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/logo"
        android:background="#2f4858" />

    <LinearLayout
        android:id="@+id/linearLayoutDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/separator">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:textColor="#DAF7DC"
            android:text="Email" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/insert_city_et_bg"
            android:fontFamily="@font/inter"
            android:hint="Email"
            android:paddingStart="20dp"
            android:textColor="#DAF7DC"
            android:textColorHint="#DAF7DC"
            android:textSize="20sp"
            android:translationZ="5dp"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:textColor="#DAF7DC"
            android:text="Company name"/>


        <EditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/insert_city_et_bg"
            android:fontFamily="@font/inter"
            android:hint="Company name"
            android:paddingStart="20dp"
            android:textColor="#DAF7DC"
            android:textColorHint="#DAF7DC"
            android:textSize="20sp"
            android:translationZ="5dp"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:textColor="#DAF7DC"
            android:text="Published"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="170dp"
            android:background="@drawable/insert_city_et_bg"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            android:translationZ="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutDashboard"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="start">

        <Button
            android:id="@+id/btnPublish"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:text="Publish an Event"
            android:textAllCaps="false"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:textColor="#DAF7DC"
            android:background="@drawable/button_sign_bg" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_logout_24"
            android:layout_gravity="center"/>


    </LinearLayout>


</RelativeLayout>