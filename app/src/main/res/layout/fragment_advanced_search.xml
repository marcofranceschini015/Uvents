<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.menu_frgms.AdvancedSearchFragment"
    android:background="@color/light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/close"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/close_view"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/writings_dark_blue"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="Filter by"
                android:fontFamily="@font/brawler"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llFilter"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/writings_dark_blue"
                android:textSize="20dp"
                android:text="Category"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategory"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/squared_background"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llCategory"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/writings_dark_blue"
                android:textSize="20dp"
                android:text="Date"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="date"
                android:hint="From dd/mm/yy"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/toDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="date"
                android:hint="To dd/mm/yy"
                android:textSize="18dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llDate"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/writings_dark_blue"
                android:textSize="20dp"
                android:text="Time"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fromTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="time"
                android:hint="From 24h"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/toTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="time"
                android:hint="To 24h"
                android:textSize="18dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOrganizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llTime"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/writings_dark_blue"
                android:textSize="20dp"
                android:text="Organizer"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/organizerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Organizer name"
                android:textSize="18dp" />

        </LinearLayout>

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_below="@id/llOrganizer"
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp"
            android:text="Apply"
            android:textAllCaps="false"
            android:fontFamily="@font/lato"
            android:textSize="19sp"
            android:textColor="#DAF7DC"
            android:background="@drawable/button_sign_bg"
            />



    </RelativeLayout>


</FrameLayout>