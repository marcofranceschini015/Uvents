<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.fragments.EventFragment"
    android:background="#86BBD8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageEvent"
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nameEvent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/taylor_swift_concert"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/nameEvent"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Event 1"
            app:layout_constraintBottom_toTopOf="@+id/organizerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageEvent" />

        <TextView
            android:id="@+id/organizerName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Organizer 1"
            app:layout_constraintBottom_toTopOf="@+id/categories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameEvent" />

        <TextView
            android:id="@+id/categories"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Category 1, Category 2"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/organizerName" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="145dp"
            android:text="Description"
            app:layout_constraintBottom_toTopOf="@+id/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categories" />

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:text="Location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>